        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMI"
            android:id="@+id/uname"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="12"
            android:textSize="40sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>